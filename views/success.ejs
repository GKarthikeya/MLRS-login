<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success Page</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .success-container {
            text-align: center;
            margin-top: 50px;
        }

        .success-message {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .btn-primary {
            margin-top: 20px;
        }

        .custom-button {
            background-color: rgb(140, 84, 183);
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            font-size: 16px;
        }

        .custom-button:hover {
            background-color: rgb(143, 67, 220);
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 success-container">
                <h1 class="success-message" style="color: green; font-size: 32px;">Form Submitted Successfully!</h1>
                <a href="/" class="custom-button"> Back to Login</a>
            </div>
        </div>
    </div>

    <!-- âœ… JavaScript for Popup -->
    <script>
        // Get query params from URL
        function getQueryParams() {
            const params = {};
            const queryString = window.location.search.slice(1);
            queryString.split("&").forEach(param => {
                const [key, value] = param.split("=");
                params[key] = decodeURIComponent(value || "");
            });
            return params;
        }

        const data = getQueryParams();
        if (data.username || data.email || data.mobile) {
            const message = `
            Submitted Details:\n
            Username: ${data.username || "N/A"}\n
            Email: ${data.email || "N/A"}\n
            Mobile: ${data.mobile || "N/A"}
            `;
            alert(message);
        }
    </script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
