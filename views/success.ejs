<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Success Page</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>

  <style>
    .success-container {
      text-align: center;
      margin-top: 50px;
    }

    .success-message {
      font-size: 32px;
      color: green;
      margin-bottom: 30px;
    }

    .submitted-info {
      font-size: 20px;
      margin-top: 10px;
      color: #333;
      text-align: left;
      display: inline-block;
    }

    .custom-button {
      background-color: rgb(140, 84, 183);
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      text-decoration: none;
      font-size: 16px;
      margin-top: 30px;
      display: inline-block;
    }

    .custom-button:hover {
      background-color: rgb(143, 67, 220);
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 success-container">
        <h1 class="success-message">âœ… Form Submitted Successfully!</h1>

        <!-- Predefined format showing submitted data -->
        <div class="submitted-info" id="submittedInfo">
          <p><strong>ðŸ‘¤ Username:</strong> <span id="displayUsername">________</span></p>
          <p><strong>ðŸ”‘ Password:</strong> <span id="displayPassword">________</span></p>
        </div>
     </div>   
  <a href="/" class="custom-button">Back to Login</a>
      </div>
    </div>
  </div>

  <script>
    function getQueryParams() {
      const params = {};
      const query = window.location.search.substring(1).split("&");
      for (const pair of query) {
        const [key, value] = pair.split("=");
        if (key) params[key] = decodeURIComponent(value || "");
      }
      return params;
    }

    const data = getQueryParams();
    document.getElementById("displayUsername").textContent = data.username || "________";
    document.getElementById("displayPassword").textContent = data.password || "________";
  </script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
